{
  "path": {
    "options": [
      { "name": "base", "path": "src" },
      { "name": "component", "path": "src/components"},
      { "name": "test", "path": "test" },
      { "name": "resources", "path": "src/resources" },
      { "name": "graphql", "path": "src/resources/graphql"},
      { "name": "dist", "path": "dist" }
    ]
  },
  "language": {
    "options": [
      {
        "name": "javascript",
        "value": "javascript",
        "suffix": ".js",
        "main": "src/index.js",
        "resolveExtensions": [".js"],
        "webpackModules": {
          "rules": [
            { "test": "/\\.(js)$/", "use": "babel-loader" },
            { "test": "/\\.(css)$/", "use": ["css-loader", "style-loader"] },
            { "test": "/\\.(jpg|png|jpeg|gif)$/", "use": ["file-loader"] }
          ]
        }
      },
      {
        "name": "typescript",
        "value": "typescript",
        "suffix": ".tsx",
        "main": "src/index.tsx",
        "packages": [
          { "name": "@types/react", "version": "16.9.19" },
          { "name": "@types/react-dom", "version": "16.9.5" }
        ],
        "devPackages": [
          { "name": "typescript", "version": "^3.7.5" },
          { "name": "awesome-typescript-loader", "version": "^5.2.1" }
        ],
        "resolveExtensions": [
          ".ts", ".tsx", ".js"
        ],
        "webpackModules": {
          "rules": [
            { "test": "/\\.(js)$/", "use": "babel-loader" },
            { "test": "/\\.(css)$/", "use": ["css-loader", "style-loader"] },
            { "test": "/\\.(jpg|png|jpeg|gif)$/", "use": ["file-loader"] },
            { "test": "/\\.tsx?$/", "use": [
              "awesome-typescript-loader"
            ] }
          ]
        }
      }
    ],
    "default": "javascript"
  },
  "style": {
    "options": [
      {
        "name": "css",
        "value": "css",
        "suffix": ".css"
      },
      {
        "name": "sass",
        "value": "sass",
        "suffix": ".sass",
        "packages": [
          { "name": "sass-loader", "version": "^3.2.0" },
          { "name": "node-sass", "version": "^3.7.0" }
        ]
      },
      {
        "name": "scss",
        "value": "scss",
        "suffix": ".scss",
        "packages": [
          { "name": "sass-loader", "version": "^3.2.0" },
          { "name": "node-sass", "version": "^3.7.0" }
        ]
      },
      {
        "name": "less",
        "value": "less",
        "suffix": ".less",
        "packages": [
          { "name": "less-loader", "version": "^2.2.3" },
          { "name": "less", "version": "^2.7.1" }
        ]
      },
      {
        "name": "styled-components",
        "value": "styled-components",
        "packages": [
          { "name": "styled-components", "version": "^4.4.1" }
        ]
      }
    ],
    "default": "css"
  },
  "api": {
    "options": [
      {
        "name": "graphql",
        "value": "GraphQL",
        "packages": [
          {
            "name": "@apollo/react-hooks",
            "version": "^3.1.3"
          },
          {
            "name": "apollo-boost",
            "version": "^0.4.4"
          },
          {
            "name": "apollo-client",
            "version": "^2.6.4"
          },
          {
            "name": "apollo-link-context",
            "version": "^1.0.19"
          },
          {
            "name": "graphql",
            "version": "^14.5.8"
          },
          {
            "name": "graphql-tag",
            "version": "^2.10.1"
          },
          {
            "name": "eslint-plugin-react-hooks",
            "version": "^2.3.0"
          },
          {
            "name": "regenerator-runtime",
            "version": "^0.13.3"
          }
        ]
      },
      {
        "name": "rest",
        "value": "REST",
        "packages": [
          { "name": "express", "version": "^4.17.1" }
        ]
      }
    ],
    "default": "rest"
  }
}
